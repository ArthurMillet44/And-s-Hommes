{#fichier html de la page contact #}

{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{asset('css/contact.css')}}" rel="stylesheet" />
    <link href="{{ asset('css/homehome.css') }}" rel="stylesheet"/>
{% endblock %}
{% block title %}Ands Hommes | Nous contacter{% endblock %}

{% block body %}


    <form class="formulaire" method="post" action="/InsertMessage">
        <div class="Formulaire_contact">
            <div class="placeHolderRemonte">
                <input id="lastname" class="input_from2" type="text" key="lastname" name="nom" required>
                <label class="labelContact" for="Nom">Nom</label>
            </div>

            <div class="placeHolderRemonte">
                <input id="first_name" class="input_from2" type="text" key="firstname"   required>
                <label class="labelContact" for="Prenom">Prenom</label>
            </div>

            <div class="placeHolderRemonte">
                <input id="year" class="input_from2" type="number" key="year" required>
                <label class="labelContact" for="Age">Âge</label>
            </div>

            <div class="placeHolderRemonte">
                <input id="mail" class="input_from2" type="email" key="mail"  required>
                <label class="labelContact" for="Mail">Mail</label>
            </div>


            <input id="message" class="input_from" type="text" key="messageBody" name="messageBody" placeholder="Votre Message" required>
            <input type="submit" id="envoyer" class="BoutonEnvoyer" value="Envoyer">
        </div>
    </form>
    <footer class="footer" id="basDePage">
        <div class="Liste_info">
            <div class="Our mail">
                <img class="info-img" src="images/courrier.png">
                <h3 id="mail-text">sae.andshommes@gmail.com</h3>
            </div>
            <div class="Our number">
                <img class="info-img" src="images/telephone.png">
                <h3 id="number-text">01 23 45 56 78</h3>
            </div>
            <div class="Our localisation">
                <img class="info-img" src="images/localisateur.png">
                <h3 id="localisation-text">33 rue Dufour, Nantes</h3>
            </div>
            <div class="Our linkedin">
                <img class="info-img" src="images/logo-linkedin.png">
                <h3 id="linkedin-text">And's Hommes</h3>
            </div>

        </div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            src="Animations/particles.js"
            src="Animations/particles.min.js"
            src="Animations/app.js"
            var basDePage = document.getElementById("basDePage");

            window.addEventListener('scroll', function() {
                var scrollPosition = window.scrollY || document.documentElement.scrollTop;

                // Affiche ou masque le bandeau en fonction de la position de défilement
                if (scrollPosition >= document.documentElement.scrollHeight - window.innerHeight) {
                    basDePage.style.display = "block";
                } else {
                    basDePage.style.display = "none";
                }
            });
        });
    </script>


{% endblock %}
